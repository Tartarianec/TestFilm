@model TestFilm.Models.Film

@{
    ViewBag.Title = "Добавление фильма";
}
<div class="container-fluid">
    <div class="row">
        <form asp-action="create" asp-controller="home" class="form-horizontal" role="form">
            <div class="form-group col-lg-6">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Description" class="control-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Year" class="control-label">Год выпуска</label>
                <input type="number" asp-for="Year" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Director" class="control-label">Режиссер</label>
                <input type="text" asp-for="Director" class="form-control" />
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="Image" class="control-label">Постер</label>
                <input type="text" asp-for="Image" class="form-control" />
            </div>
            <div class="form-group  col-lg-6">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
